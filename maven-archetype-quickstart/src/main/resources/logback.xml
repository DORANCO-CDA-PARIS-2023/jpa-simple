<configuration>
    <!-- To create the logback : https://www.baeldung.com/logback-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- To only see the Warn (or higher) message in my logs-->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
